<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/logo_sp_beaumont_two"
    android:clickable="false">

    <ImageView
        android:id="@+id/caducee"
        android:layout_width="188dp"
        android:layout_height="180dp"
        android:layout_alignParentTop="false"
        android:layout_alignParentBottom="false"
        android:layout_centerInParent="true"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/pharma" />

    <ImageView
        android:id="@+id/headerImgView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/textView2"
        android:layout_alignParentTop="false"
        android:layout_alignParentBottom="false"
        android:layout_centerInParent="true"
        android:padding="5dp"
        app:srcCompat="@drawable/logosdis" />

    <ImageView
        android:id="@+id/warning"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@id/not_allowed"
        android:layout_alignParentLeft="false"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:visibility="gone"
        app:srcCompat="@drawable/pngegg" />

    <TextView
        android:id="@+id/not_allowed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/headerImgView"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:background="@color/CadetBlue"
        android:gravity="center_horizontal"
        android:shadowColor="@color/Black"
        android:textColor="@color/AliceBlue"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        android:visibility="gone"
        tools:visibility="gone" />

    <TextView
        android:id="@+id/appname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/app_name"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/progressar1"
        android:layout_alignParentLeft="false"
        android:layout_alignParentBottom="false"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:hint="Chargement en cours..."
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="25dp" />

    <ProgressBar
        android:id="@+id/progressar1"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        android:indeterminate="false"
        android:max="100"
        android:progress="50" />

</RelativeLayout>