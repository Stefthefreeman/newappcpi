<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/logo_sp_beaumont_two"
    android:clickable="false"><![CDATA[
    android:id="@+id/therun">










    ]]>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/textView2"
        android:layout_alignParentTop="false"
        android:layout_alignParentBottom="false"
        android:layout_centerInParent="true"
        android:padding="5dp"
        app:srcCompat="@drawable/logosdis" />

    <TextView
        android:id="@+id/appname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/app_name"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_gravity="center_horizontal"
        android:textAllCaps="false"
        android:textSize="25dp"
        android:hint="Chargement en cours..."
        android:gravity="center_horizontal"
        android:textColor="#FFFFFF"
        android:layout_alignParentLeft="false"
        android:layout_alignParentBottom="false"
        android:layout_above="@+id/progressar1" />

    <ProgressBar
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:progress="50"
        android:max="100"
        android:indeterminate="false"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/progressar1"
        android:layout_alignParentBottom="true" />

</RelativeLayout>