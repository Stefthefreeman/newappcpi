<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/grd"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:background="@color/beaumontblue"
    android:padding="5dp"
    card_view:cardCornerRadius="16dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:background="@drawable/customblueshape"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/headerImgView"
            android:layout_width="match_parent"
            android:layout_height="176dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/app_name"
            android:cropToPadding="true"
            android:scaleType="fitCenter" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/beaumontblue"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/nomitem"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:gravity="center_horizontal|center_vertical"
                android:textAllCaps="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="@color/white"
                android:textScaleX="0.80"
                android:textSize="16sp"
                android:textStyle="normal|bold"
                android:typeface="sans" />

            <ImageView
                android:id="@+id/isongard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:adjustViewBounds="true"
                android:background="@drawable/spinback"
                android:padding="2dp"
                android:scaleType="centerInside"
                android:visibility="gone"
                card_view:srcCompat="@drawable/chfire" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                style="@style/tv_gardes_list"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:paddingStart="7dp"
                android:text="@string/chef_de_garde"
                android:textAlignment="textStart"
                android:textSize="16sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/peremption"
                style="@style/tv_gardes_list"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="7dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textScaleX="0.80"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@color/beaumontblue" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:paddingStart="7dp"
                android:text="@string/conducteur_pltt"
                android:textScaleX="0.80"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dotation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="7dp"
                android:textScaleX="0.80"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:paddingStart="7dp"
                android:text="@string/equipier_1"
                android:textScaleX="0.80"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/restant"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="7dp"
                android:textScaleX="0.80"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:paddingStart="7dp"
                android:text="@string/equipier_2"
                android:textScaleX="0.80"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/divers"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="7dp"
                android:textScaleX="0.80"
                android:textSize="16sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@color/beaumontblue" />
        <TextView
            android:id="@+id/consignes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:padding="12dp"
            android:textAllCaps="true"
            android:textColor="@color/orangedark"
            android:textScaleX="0.80"
            android:textSize="20sp"
            android:textStyle="bold|italic" />


    </LinearLayout>

</androidx.cardview.widget.CardView>
